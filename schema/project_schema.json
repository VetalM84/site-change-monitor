{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema validation for the project config file",
  "type": "object",
  "properties": {
    "project_name": {
      "type": "string"
    },
    "home_url": {
      "type": "string"
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "paginator_pattern": {
                "type": "string"
              },
              "paginator_count": {
                "type": "integer"
              },
              "items_container": {
                "type": "object",
                "oneOf": [
                  {
                    "properties": {
                      "tag": {
                        "type": "string"
                      },
                      "class": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "tag",
                      "class"
                    ]
                  },
                  {
                    "properties": {
                      "selector": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "selector"
                    ]
                  }
                ]
              }
            },
            "required": [
              "paginator_pattern",
              "paginator_count",
              "items_container"
            ]
          },
          {
            "properties": {
              "single_url": {
                "type": "string"
              }
            },
            "required": [
              "single_url"
            ]
          }
        ],
        "single_item_container": {
          "type": "object",
          "properties": {
            "tag": {
              "type": "string"
            },
            "class": {
              "type": "string"
            }
          },
          "required": [
            "tag",
            "class"
          ]
        },
        "item_fields": {
          "type": "object",
          "properties": {
            "sku": {
              "type": "object"
            }
          },
          "required": [
            "sku"
          ]
        }
      }
    }
  },
  "required": [
    "project_name",
    "home_url",
    "modules"
  ]
}